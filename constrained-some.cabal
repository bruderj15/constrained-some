common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  Data.Some.Constraint
    build-depends:    base >=4.12 && <4.21
    hs-source-dirs:   src
    default-language: Haskell2010

test-suite constrained-some-test
    import:           warnings
    default-language: Haskell2010
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base >=4.12 && <4.21,
        constrained-some
